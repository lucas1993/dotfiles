export NVM_DIR="/home/amaral/.nvm"
#[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
lazy_load_nvm() {
  unset -f node nvm
  [[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh"
}

node() {
  lazy_load_nvm
  node $@
}

nvm() {
  lazy_load_nvm
  nvm $@
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

fpath=(~/.zsh/completion $fpath)

